# Set the initial path
export PATH=/bin:/usr/bin:/usr/local/bin
export LANG=C.UTF-8
export TERM=linux
export HOME="/root"

if [ $EUID -eq 0 ]; then
  export PATH=/usr/bin:/usr/local/bin:/sbin:/usr/sbin:/usr/local/sbin:/bin
fi

PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
# PS1='\u@\h:\w\$ '

# End /etc/profile
